<Window x:Class="AnimalChipSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sök efter hundar eller katter" MinWidth="650" Width="650" MinHeight="400" Height="400" SizeToContent="Height">
    <StackPanel Margin="5,5,5,5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Content="Chip-ID:"
                   VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                   Grid.Row="0" Grid.Column="0"/>
            <TextBox x:Name="chipIdTxt" TextWrapping="NoWrap" MaxLength="15" Margin="0,0,0,5"
                     VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" FontSize="23"
                     Grid.Row="0" Grid.Column="1"
                     Text="7520981003657##"/>

            <Label Content="Tatuerings-ID:"
                   VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                   Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="inkIdTxt" TextWrapping="NoWrap" MaxLength="15" Margin="0,0,0,5"
                     VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" FontSize="23"
                     Grid.Row="1" Grid.Column="1"/>

            <Label Content="Djurslag:"
                   VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                   Grid.Row="2" Grid.Column="0"/>
            <ComboBox x:Name="DjurslagCB" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" FontSize="23"  Grid.Row="2" Grid.Column="1">
                <ComboBoxItem IsSelected="True" Name="Hund">Hund</ComboBoxItem>
                <ComboBoxItem Name="Katt">Katt</ComboBoxItem>
            </ComboBox>

            <Button x:Name="SearchButton" Content="Sök" Click="Button_Click" Margin="10,0,0,0" FontSize="23" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3"/>
        </Grid>
            <Grid Margin="0,10,0,0">
                <!--<Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            <ListView x:Name="resultList" HorizontalAlignment="Stretch"  Grid.Column="0" Grid.Row="0"
                      ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True">
                <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Namn" DisplayMemberBinding="{Binding Namn}" Width="250" />
                            <GridViewColumn Header="Ras" DisplayMemberBinding="{Binding Ras}" Width="160"/>
                            <GridViewColumn Header="Kön" DisplayMemberBinding="{Binding Kon}" Width="50"/>
                            <GridViewColumn Header="Reg#" DisplayMemberBinding="{Binding RegId}" Width="120"/>
                        </GridView>
                    </ListView.View>
                    <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="MouseDoubleClick" Handler="ListViewItemDoubleClick" />
                    </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
    </StackPanel>
</Window>
